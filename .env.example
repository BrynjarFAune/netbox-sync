# NetBox Configuration
NETBOX_URL=http://your-netbox-instance:8000
NETBOX_TOKEN=your_netbox_api_token_here

# FortiGate Configuration
FGT_HOST=https://your-fortigate-host:443
FGT_TOKEN=your_fortigate_api_key_here

# Microsoft Graph/Intune Configuration
GRAPH_TENANT_ID=your_azure_tenant_id_here
GRAPH_CLIENT_ID=your_azure_client_id_here
GRAPH_CLIENT_SECRET=your_azure_client_secret_here

# ESET Configuration (Optional)
ESET_BASE_URL=https://your-eset-console
ESET_TOKEN=your_eset_api_token_here

# Sync Configuration
SYNC_INTERVAL_CRON=0 */6 * * *
DELETE_GRACE_DAYS=7
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///app/data/netbox_sync.db

# API Rate Limiting
API_RATE_LIMIT=10
API_RETRY_ATTEMPTS=3
API_BACKOFF_FACTOR=1.0